@model List<WebApplication2.Models.Appointment>


<table class="table table-bordered">
    <tr>
        <th>Doctor ID</th>
        <th>Date</th>
        <th>Reason</th>
        <th>Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DoctorID</td>
            <td>@item.DateTime.ToString("g")</td>
            <td>@item.Reason</td>
            <td>@item.Status</td>
            <td>
                <form asp-action="Delete" asp-controller="Appointment" method="post" onsubmit="return confirm('Are you sure you want to delete the appointment?');">
                    <input type="hidden" name="appointmentId" value="@item.AppointmentID" />
                    <button type="submit" class="btn btn-danger btn-sm">🗑 Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
