@model List<WebApplication2.Models.AppointmentWithDoctor>

<table class="table">
    <thead>
        <tr>
            <th>Doctor</th>
            <th>Clinic</th>
            <th>Date</th>
            <th>Reason</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DoctorName</td>
                <td>@item.ClinicAddress</td>
                <td>@item.DateTime</td>
                <td>@item.Reason</td>
                <td>@item.Status</td>
                <td>
                    <form asp-action="Delete" asp-controller="Appointment" method="post" onsubmit="return confirm('Are you sure you want to delete the appointment?
');">
                        <input type="hidden" name="appointmentId" value="@item.AppointmentID" />
                        <button type="submit" class="btn btn-danger btn-sm">🗑 Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
