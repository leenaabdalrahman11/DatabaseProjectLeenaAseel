@model List<WebApplication2.Models.DoctorProfile>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<section class="container my-5">
    <h3 class="mb-4 text-center">
        Top Rated Doctors
        
    </h3>

    <div class="scroll-container d-flex flex-nowrap gap-3">
        @foreach (var doc in Model)
        {
            <div class="card flex-shrink-0" style="width: 250px;">
                <img src="@Url.Action("GetPhoto", "DoctorProfile", new { id = doc.DoctorID })"
                     class="card-img-top" style="height: 250px; object-fit: cover;" />

                <div class="card-body text-center">
                    <h6 class="fw-bold">@doc.DoctorName</h6>
                    <p class="text-muted small mb-1">@doc.Bio</p>
                    <p class="text-muted small">
                        <i class="bi bi-geo-alt-fill text-primary"></i> @doc.ClinicAddress
                    </p>
                    <span class="badge bg-warning text-dark">⭐ @doc.Rating</span>
                </div>
            </div>
        }
    </div>
</section>


